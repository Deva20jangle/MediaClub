<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:layout_gravity="left"
    android:layout_marginLeft="5dp">

    <LinearLayout
        android:id="@+id/layout_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left">

        <TextView
            android:id="@+id/tv_text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text_chat_left"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textSize="18sp"
            android:maxWidth="270dp"
            android:minWidth="40dp"
            android:text="This is text message"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_image"
        android:layout_width="200dp"
        android:layout_height="225dp"
        android:layout_marginRight="100dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/image_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:src="@drawable/icon_male_ph"
                android:scaleType="fitCenter"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_voice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_layout_round_left"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="-3dp"
            android:layout_marginRight="-3dp">

            <ImageView
                android:id="@+id/btn_play_chat"
                android:padding="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="7dp"
                android:layout_centerVertical="true"
                android:visibility="visible" />

<!--            <ImageButton
                android:id="@+id/btn_pause_chat"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:clickable="false"
                android:src="@drawable/ic_baseline_pause_circle_filled_24"
                android:tint="@color/colorIcon"
                android:backgroundTint="@color/white"
                android:visibility="gone" />-->
        </RelativeLayout>

        <View
            android:id="@+id/v_length"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="#333333"
            android:layout_marginRight="15dp" />

<!--        <Chronometer
            android:id="@+id/tv_duration"
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"
            android:gravity="center"
            android:text="01:00"
            android:textColor="@color/darkGray" />-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_Doc"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_layout_round_left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            app:tint="#348ACD"
            android:layout_marginTop="12dp"
            android:padding="2dp"
            android:src="@drawable/ic_file" />

        <TextView
            android:id="@+id/txtFileName"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="File Name"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>