<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:layout_gravity="left"
    android:layout_marginLeft="5dp">

    <LinearLayout
        android:id="@+id/layoutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_text_chat_left"
        android:gravity="left">

        <TextView
            android:id="@+id/txtSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:maxWidth="270dp"
            android:minWidth="40dp"
            android:padding="5dp"
            android:text="Sender one"
            android:textColor="@color/Pink"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:textColor="@color/black"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="2dp"
            android:textSize="18sp"
            android:maxWidth="270dp"
            android:minWidth="40dp"
            android:text="This is text message"
            android:layout_marginStart="7dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutImage"
        android:layout_width="200dp"
        android:layout_height="225dp"
        android:layout_marginRight="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtImageSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:maxWidth="270dp"
            android:minWidth="40dp"
            android:padding="3dp"
            android:text="Sender"
            android:textColor="@color/Pink"
            android:textSize="14sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/imageChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:src="@drawable/icon_male_ph"
                android:scaleType="fitCenter"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutVoice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_layout_round_left"
        android:visibility="visible"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtAudioSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:maxWidth="270dp"
            android:minWidth="40dp"
            android:padding="1dp"
            android:text="Sender"
            android:textColor="@color/Pink"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="-3dp"
                android:layout_marginRight="-3dp">

                <ImageView
                    android:id="@+id/btnPlayChat"
                    android:padding="5dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:visibility="visible" />

                <!--            <ImageButton
                                android:id="@+id/btnPauseChat"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginLeft="10dp"
                                android:backgroundTint="@color/white"
                                android:clickable="false"
                                android:src="@drawable/ic_baseline_pause_circle_filled_24"
                                android:tint="@color/colorIcon"
                                android:visibility="gone" />-->
            </RelativeLayout>

            <View
                android:id="@+id/v_length"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="#333333"
                android:layout_marginRight="15dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDoc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/txtDocSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:maxWidth="270dp"
            android:minWidth="40dp"
            android:padding="1dp"
            android:text="Sender"
            android:textColor="@color/Pink"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_layout_round_left"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                app:tint="#348ACD"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:padding="2dp"
                android:src="@drawable/ic_file" />

            <TextView
                android:id="@+id/txtFileName"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="File Name"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>